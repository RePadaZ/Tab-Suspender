{
  "manifest_version": 3,
  "name": "Tab Suspender",
  "description": "Инструмент для того чтоб выгружать вкладки",
  "version": "1.0",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "tabs",
    "storage",
    "debugger",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
}